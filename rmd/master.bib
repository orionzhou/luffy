title = {{Selection, genome-wide fitness effects and evolutionary rates in the model legume {\textless}i{\textgreater}Medicago truncatula{\textless}/i{\textgreater}}},
url = {http://doi.wiley.com/10.1111/mec.12329},
volume = {22},
