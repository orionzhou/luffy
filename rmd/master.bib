pmid = {18402703},
title = {{Gene expression analyses in maize inbreds and hybrids with varying levels of heterosis}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2365949{\&}tool=pmcentrez{\&}rendertype=abstract http://bmcplantbiol.biomedcentral.com/articles/10.1186/1471-2229-8-33},
