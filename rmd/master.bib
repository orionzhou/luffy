editor = {Fay, Justin C.},
issn = {1553-7404},
journal = {PLoS Genetics},
month = {jul},
number = {7},
pages = {e1002190},
pmid = {21811419},
title = {{Mechanisms of Chromosome Number Evolution in Yeast}},
