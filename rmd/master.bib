journal = {Genome Research},
month = {jun},
number = {6},
pages = {974--984},
pmid = {21324876},
title = {{CNVnator: An approach to discover, genotype, and characterize typical and atypical CNVs from family and population genome sequencing}},
url = {http://genome.cshlp.org/cgi/doi/10.1101/gr.114876.110 http://www.ncbi.nlm.nih.gov/pubmed/21324876 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC3106330},
volume = {21},
