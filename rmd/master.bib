doi = {10.1080/10635150590947131},
isbn = {1063-5157 (Print)},
issn = {1063-5157},
journal = {Systematic Biology},
number = {4},
pages = {575--594},
pmid = {16085576},
title = {{Evolutionary Rates Analysis of Leguminosae Implicates a Rapid Diversification of Lineages during the Tertiary}},
