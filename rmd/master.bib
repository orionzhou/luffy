author = {Stukenbrock, Eva H. and J{\o}rgensen, Frank G. and Zala, Marcello and Hansen, Troels T. and McDonald, Bruce a. and Schierup, Mikkel H.},
doi = {10.1371/journal.pgen.1001189},
editor = {Malik, Harmit S.},
