issn = {0018-067X},
journal = {Heredity},
number = {4},
pages = {316--326},
pmid = {24690755},
publisher = {Nature Publishing Group},
title = {{Extensive heterosis in growth of yeast hybrids is explained by a combination of genetic models}},
url = {http://www.nature.com/doifinder/10.1038/hdy.2014.33},
volume = {113},
year = {2014}
}
