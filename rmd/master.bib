journal = {Genome Biology},
keywords = {Arabidopsis,Germination,RNA-seq,Alternative splici,alternative splicing,arabidopsis,dna methylation,germination,rna-seq,small rna,transcription factor},
number = {1},
pages = {172},
publisher = {Genome Biology},
title = {{Extensive transcriptomic and epigenomic remodelling occurs during Arabidopsis thaliana germination}},
url = {http://genomebiology.biomedcentral.com/articles/10.1186/s13059-017-1302-3},
volume = {18},
year = {2017}
}
