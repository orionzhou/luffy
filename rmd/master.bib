author = {Shao, Zhu-Qing and Zhang, Yan-Mei and Hang, Yue-Yu and Xue, Jia-Yu and Zhou, Guang-Can and Wu, Ping and Wu, Xiao-Yi and Wu, Xun-Zong and Wang, Qiang and Wang, Bin and Chen, Jian-Qun},
doi = {10.1104/pp.114.243626},
issn = {0032-0889},
journal = {Plant Physiology},
month = {sep},
