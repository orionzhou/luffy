keywords = {Gene Expression Profiling,Gene Expression Regulation,Genetic,Hybrid Vigor,Hybrid Vigor: genetics,Hybridization,Inbreeding,Oligonucleotide Array Sequence Analysis,Plant,Zea mays,Zea mays: genetics},
number = {1},
