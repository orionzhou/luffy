title = {{Whole-Genome and Chromosome Evolution Associated with Host Adaptation and Speciation of the Wheat Pathogen Mycosphaerella graminicola}},
url = {http://dx.plos.org/10.1371/journal.pgen.1001189},
volume = {6},
year = {2010}
}
