journal = {Genetics},
month = {aug},
number = {4},
pages = {1303--1311},
title = {{Identification of a New Rice Blast Resistance Gene, Pid3, by Genomewide Comparison of Paired Nucleotide-Binding Site-Leucine-Rich Repeat Genes and Their Pseudogene Alleles Between the Two Sequenced Rice Genomes}},
